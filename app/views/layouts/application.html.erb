<!DOCTYPE html>
<html>
  <head>
    <title>SetList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <section class=<%= type %>>
        <p><%= msg %></p>
      </section>
    <% end %>

    <p><%= link_to "Cart: #{cart.total_count}", '/cart' %></p>

    <%= yield %>
  </body>
</html>
